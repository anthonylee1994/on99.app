{{ $listen_port := $.NGINX_PORT | default "5000" }}

server {
    listen {{ $listen_port }};
    server_name _;
    
    root /app;
    index index.html;
    
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}
